process {
    withName: 'READ' {
        conda = "$baseDir/envs/environment.yaml"
    }
}

process {
    withName: 'PREPRO' {
        conda = "$baseDir/envs/environment.yaml"
    }
}

process {
    withName: 'PCA' {
        conda = "$baseDir/envs/environment.yaml"
    }
}

process {
    withName: 'M_GENES' {
        conda = "$baseDir/envs/environment.yaml"
    }
}